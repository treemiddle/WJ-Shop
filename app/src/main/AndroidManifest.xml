<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jay.wjshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WJApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_wj_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_wj_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.WJShop">

        <activity
            android:name=".ui.home.WJHomeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WJShop" />

        <activity
            android:name=".ui.splash.WJSplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme" />

        <activity
            android:name=".ui.WJStartActivity"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/ColdStartTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>